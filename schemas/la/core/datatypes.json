{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://raw.githubusercontent.com/svranic/ladm-schemas/main/schemas/la/core/datatypes.json",
	"title": "LADM Land Registration Module Shared Datatypes",
	"description": "Common data types (ISO 19115, ISO 19107)",
	"$defs": {
		"Oid": {
			"type": "object",
			"description": "Basic definition of Oid",
			"properties": {
				"localId": {
					"type": "string"
				},
				"namespace": {
					"type": "string"
				}
			},
			"required": [
				"localId",
				"namespace"
			]
		},
		"CodeListRef": {
			"description": "Pattern for referencing external CodeLists (SKOS/RDF)",
			"type": "object",
			"properties": {
				"href": {
					"type": "string",
					"format": "uri",
					"description": "URI to the specific code definition"
				},
				"label": {
					"type": "string",
					"description": "Human-readable label (optional)"
				}
			},
			"required": [
				"href"
			]
		},
		"LA_AvailabilityStatusType": {
			"description": "LA_AvailabilityStatusType - The status of the document availability",
			"type": "string",
			"enum": [
				"docAvailable",
				"docNotAvailable",
				"incomplete",
				"unknown"
			],
			"default": "docAvailable"
		},
		"CI_ResponsibleParty": {
			"type": "object",
			"description": "Implementation of ISO 19115 class CI_ResponsibleParty",
			"properties": {
				"organisationName": {
					"type": "string"
				},
				"individualName": {
					"type": "string"
				},
				"role": {
					"type": "string",
					"enum": [
						"resourceProvider",
						"custodian",
						"owner",
						"user",
						"distributor",
						"originator",
						"pointOfContact",
						"principalInvestigator",
						"processor",
						"publisher",
						"author"
					]
				},
				"contactInfo": {
					"type": "object",
					"properties": {
						"email": {
							"type": "string",
							"format": "email"
						},
						"phone": {
							"type": "string"
						}
					}
				}
			},
			"required": [
				"organisationName",
				"role"
			]
		},
		"DQ_Quality": {
			"type": "object",
			"description": "Implementation of ISO 19115 class DQ_Element",
			"properties": {
				"type": {
					"type": "string",
					"description": "The name of the subclass of quality (e.g. PositionalAccuracy)",
					"enum": [
						"DQ_AbsoluteExternalPositionalAccuracy",
						"DQ_RelativeInternalPositionalAccuracy",
						"DQ_CompletenessCommission"
					]
				},
				"result": {
					"type": "object",
					"description": "Quantitative result (DQ_QuantitativeResult)",
					"properties": {
						"value": {
							"type": "number"
						},
						"unit": {
							"type": "string",
							"enum": [
								"m",
								"cm",
								"mm"
							]
						}
					},
					"required": [
						"value",
						"unit"
					]
				},
				"lineage": {
					"type": "string",
					"description": "Textual description LI_Lineage (the origin of the data)"
				}
			},
			"required": [
				"type",
				"result"
			]
		},
		"SourceRef": {
			"description": "A reference to ANY type of LADM Source. Can be a URI or a full embedded object (Spatial or Admin).",
			"oneOf": [
				{
					"title": "Reference by URI",
					"type": "string",
					"format": "uri",
					"description": "Link to the source document (e.g. https://api.cadastre.gov.hr/sources/doc-123)"
				},
				{
					"title": "Embedded Spatial Source",
					"$ref": "./source/spatial-source.json"
				},
				{
					"title": "Embedded Administrative Source",
					"$ref": "./source/administrative-source.json"
				}
			]
		}
	}
}